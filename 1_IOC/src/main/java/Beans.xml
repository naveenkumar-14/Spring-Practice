<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Correct bean definition -->
    <bean id="cash" class="com.naveen.Beans.Cash "></bean>
    <bean id="debit" class="com.naveen.Beans.DebitCard"></bean>
    <bean id="credit" class="com.naveen.Beans.CreditCard"></bean>
    <bean id="shopping" class="com.naveen.Beans.Shopping">
    	<property name="p" ref="cash"></property>
    	<constructor-arg name="p" ref="debit"></constructor-arg>
    </bean>
</beans>
